import glob
from glob import glob
import os
import astropy
from astropy.io import fits
fls = glob('*metals.fits')

for f in fls:
    fld = f.split('_')[0]
    di = f.split('_')[1]
    full_fl = glob('/user/rsimons/grizli_extractions/{}/*/Prep/*{}*full.fits'.format(fld, di))
    full = fits.open(full_fl)

    master_list = [full['SEG'], full['DSCI']]

    for fl in full_fl:
        os.system('cp {} /user/rsimons/metal_maps_full/'.format(fl))
